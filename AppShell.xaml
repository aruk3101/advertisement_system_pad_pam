<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Projekt.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Projekt"
    xmlns:views="clr-namespace:Projekt.Views"
    Shell.FlyoutBehavior="Disabled"
    FlyoutBackgroundColor="{StaticResource Primary30}">

    <FlyoutItem Title="Dashboard"
            Icon="home_icon.png">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate views:DashBoardPage}"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Profil"
        Icon="home_icon.png">
        <Tab>
            <ShellContent
            ContentTemplate="{DataTemplate views:UserProfilePage}"/>
        </Tab>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout>
            <Button Text="Wyloguj siÄ™" Clicked="Button_Clicked_2"/>
        </StackLayout>
    </Shell.FlyoutFooter>


</Shell>
