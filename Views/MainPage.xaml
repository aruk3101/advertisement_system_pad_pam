<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projekt.MainPage"
             xmlns:viewmodels ="clr-namespace:Projekt.ViewModels"
             x:DataType ="viewmodels:MainViewModel">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="Welcome"/>
            <Button Text="Zaloguj się" Command="{Binding GoToLoginPageCommand}"/>
            <Button Text="Zarejestruj się" Command="{Binding GoToRegisterPageCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
